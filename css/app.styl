html
    height 100%

body
    background #55efcb
    background -moz-linear-gradient(top, #55efcb 0%, #5bcaff 100%)
    background -webkit-linear-gradient(top, #55efcb 0%, #5bcaff 100%)
    background linear-gradient(to bottom, #55efcb 0%, #5bcaff 100%)
    font normal 25px Helvetica, sans-serif
    margin 0

.clear
    zoom 1

    &:before, &:after
        content ""
        display table

    &:after
        clear both

.calculator
    width 23rem
    margin 0 auto
    margin-top 100px
    height auto
    overflow hidden
    background rgba(0, 0, 0, .3)
    border-radius 3px
    box-shadow  0px 10px 15px rgba(0, 0, 0, .2)

    &__Heading
        background-color #1F1F21
        color white
        padding 15px 20px

        #screen
            letter-spacing 1px
            font-size 28px
            text-align right
            line-height 40px
            height 40px


    &__Keys
        padding 15px

        .panel-1,
        .panel-2
            float left
            height 100%

        .panel-1
            width 80%

        .panel-2
            width 20%

        button
            border none
            color white
            font-size 28px
            width 30%
            float left
            border-radius 3px
            margin 0 7px 11px 0
            line-height 55px
            transition all 0.2s ease
            -webkit-appearance none
            cursor pointer
            outline 0
            box-shadow 0px 4px rgba(0, 0, 0, 0.2)

            &:hover
                background-color #4d4d50

            &.double
                width 63%

            &.taller
                line-height 126px

        .panel-2
            button
                float none
                margin-left 0
                display block
                width 100%

        &--operator
            background-color #FA6400

